pipeline {
  agent any
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('ansible-key') 
  }
  stages {
    stage('Hello') {
      steps {
        //sh 'git clone https://github.com/sravan-github/jenkins-example-ansible.git'
        //sh 'ansible-playbook -i inventory/mariadb.hosts --private-key=$ANSIBLE_PRIVATE_KEY play.yml'
        sh 'git clone https://github.com/sravan-github/ansible-role.git'
        sh 'ansible-playbook -i inventory/mariadb.hosts --private-key=$ANSIBLE_PRIVATE_KEY ansible-role/install.yml'
      }
    }
  }
  post {
        always {
        	cleanWs deleteDirs: true
        }
    }
}
