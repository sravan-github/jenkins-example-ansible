pipeline {
  agent { label 'linux' }
  environment {
   ANSIBLE_PRIVATE_KEY=credentials('mariadb-private-key') 
  }
  stages {
    stage('Hello') {
      steps {
        sh 'git clone https://github.com/sravan-github/jenkins-example-ansible.git'
        sh 'ansible-playbook -i inventory/mariadb.hosts --private-key=$ANSIBLE_PRIVATE_KEY play.yml'
      }
    }
  }
}
